{
  "name": "api-gen",
  "version": "1.0.0",
  "private": false,
  "description": "API Gen",
  "author": "Pavol Noha <pavol.noha@gmail.com>",
  "scripts": {
    "compile": "esbuild src/index.ts --bundle --sourcemap --outfile=out/index.js",
    "compile:watch": "esbuild src/index.ts --bundle --sourcemap --outfile=out/index.js --watch",
    "serve": "wds --node-resolve --watch --app-index index.html --open",
    "cleanup": "rimraf out && rimraf dist",
    "dev": "rimraf out & npm run compile:watch & npm run serve",
    "copy:assets": "mkdir -p dist && cp -R ./assets/ ./dist/assets/ && cp index.prod.html ./dist/index.html && cp index.prod.html ./dist/404.html",
    "build:gh": "rimraf dist && npm run copy:assets && esbuild src/index.ts --bundle --minify --outfile=dist/bundle.js"
  },
  "devDependencies": {
    "@web/dev-server": "^0.1.17",
    "@web/dev-server-esbuild": "^0.3.2",
    "esbuild": "^0.14.53",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@lit/reactive-element": "^1.0.0",
    "@polkadot/api": "^9.0.1",
    "@thi.ng/atom": "^5.1.3",
    "@vaadin/router": "^1.7.4",
    "autosuggest-highlight": "^3.3.4",
    "lit": "^2.0.0",
    "lit-element": "^3.0.0",
    "lit-html": "^2.0.0",
    "showdown": "^2.1.0"
  }
}
