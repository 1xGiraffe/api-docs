{
  "name": "api-gen",
  "version": "1.0.0",
  "private": false,
  "description": "API Gen",
  "author": "Pavol Noha <pavol.noha@gmail.com>",
  "scripts": {
    "compile": "tsc",
    "compile:watch": "tsc --watch",
    "serve": "wds --node-resolve --watch --app-index index.html --open",
    "cleanup": "rimraf out && rimraf dist",
    "dev": "rimraf out && npm run compile:watch & npm run serve",
    "copy:assets": "mkdir -p dist && cp -R ./assets/ ./dist/assets/",
    "build": "rimraf dist && npm run copy:assets && tsc && NODE_ENV=development rollup -c rollup.config.js",
    "build:prod": "rimraf dist && npm run copy:assets && tsc && NODE_ENV=production rollup -c rollup.config.js"
  },
  "devDependencies": {
    "@open-wc/building-rollup": "^2.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-replace": "^3.0.0",
    "@web/dev-server": "^0.1.17",
    "@web/dev-server-rollup": "^0.3.13",
    "deepmerge": "^4.2.2",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.75.7",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-summary": "^1.2.3",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.5.3"
  },
  "dependencies": {
    "@lit/reactive-element": "^1.0.0",
    "@polkadot/api": "^9.0.1",
    "@thi.ng/atom": "^5.1.3",
    "@vaadin/router": "^1.7.4",
    "lit": "^2.0.0",
    "lit-element": "^3.0.0",
    "lit-html": "^2.0.0",
    "ts-node": "^10.9.1"
  }
}
